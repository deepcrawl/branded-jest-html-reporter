{
  "compilerOptions": {
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src"
  }
}
